<UserControl x:Class="FirstFloor.ModernUI.App.Content.Book_S3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid>
        <ScrollViewer>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Name="HeaderBookS3" HorizontalAlignment="Center" Text="AVAILABLE BICYCLE" Style="{StaticResource Heading1}" Margin="0,10,0,30" />
                <StackPanel Name="spItems" Orientation="Vertical">
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <Button Name="btnCancle" Content="CANCEL" Margin="0,0,20,0" Width="130"
                            Command="mui:LinkCommands.NavigateLink"
                            CommandParameter="/Pages/Home.xaml" FontSize="20" Background="Transparent" Foreground="Red" />
                    <Button Name="btnNext" Content="NEXT" Margin="0,0,4,0" Width="350" FontSize="20" FontWeight="Bold" Click="btnNext_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
