<UserControl x:Class="FirstFloor.ModernUI.App.Content.SearchOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="500">
    <ScrollViewer>
        <StackPanel>
            <TextBlock Text="SEARCH ORDER" Style="{StaticResource Heading2}" HorizontalAlignment="Center"/>
            <StackPanel MinWidth="500" Orientation="Horizontal" Margin="0,20,0,0">
                <StackPanel Margin="0,0,20,0">
                    <!--<Image Height="200" Width="200" Name="img1" Source="/Assets/scan.png" Margin="0,20,0,0"></Image>-->
                    <Image Height="200" Width="200" Name="img1" Margin="0,20,0,0"></Image>
                </StackPanel>
                <StackPanel Margin="10,0,0,0">
                    <TextBox Name="textorder" Width="200" Margin="0,40" FontSize="16" />
                    <Button Name="btnSearch" Width="200" Height="100" Click="Button_Click" Content="SEARCH" FontSize="20" FontWeight="Bold" />
                </StackPanel>
        </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
